<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvConversationDetailsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:14pm"
        android:background="@drawable/bg_dialog_conversation_detail_date"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:layout_gravity = "center_horizontal"/>
    <TextView
        android:id="@+id/tvConversationDetailsReceive"
        android:minWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receive_sms"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:text="sssssssssssssssssssssssssssssssss"/>
    <TextView
        android:id="@+id/tvConversationDetailsSend"
        android:minWidth="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_send_sms"
        android:paddingLeft="5dp"
        android:textSize="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:text="sssssssssssssssssssssssssssssssss"/>

</LinearLayout>
